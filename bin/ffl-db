#!/usr/bin/env node

var dotenv = require('dotenv');
var execFile = require('child_process').execFile;

dotenv.load();

var args = [];
var options = {cwd: '../scripts', env: process.env};

execFile('../scripts/reset.sh', args, options, function (error, stdout) {
  if (error) {
    return console.log(error);
  }

  console.log(stdout.toString());
});
